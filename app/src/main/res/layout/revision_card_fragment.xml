<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_revision"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="15dp"
    android:background="@color/cardview_dark_background">

    <TextView
        android:id="@+id/txt_cre_dt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_alarm_dt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/txt_cre_dt"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_interval"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_alarm_dt"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_words"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_interval"
        android:textColor="@color/white"/>
</RelativeLayout>