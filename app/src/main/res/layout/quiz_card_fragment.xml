<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/card_quiz"
    android:padding="20dp"
    android:layout_marginBottom="18dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/custom_shape1">

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:background="@color/main"/>
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="@color/card_heading"
            android:fontFamily="@font/reddit_sans_bold"
            android:text="Dummy"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_des"
        android:layout_below="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/card_paragraph"
        android:fontFamily="@font/reddit_sans_regular"
        android:text="This is a dummy paragraph" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/txt_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/card_paragraph"
            android:fontFamily="@font/reddit_sans_black"
            android:text="100"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/card_paragraph"
            android:fontFamily="@font/reddit_sans_black"
            android:text=" point"/>
    </LinearLayout>

</RelativeLayout>