<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login.LoginFragment">

    <LinearLayout
        android:id="@+id/txt_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/headline"
            android:textSize="50sp"
            android:fontFamily="@font/reddit_sans_extrabold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Login to continue"
            android:textColor="@color/headline"
            android:textSize="25sp"
            android:fontFamily="@font/reddit_sans_medium"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/background"
        android:layout_below="@+id/txt_login_title"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/png_book_logo" />

    <LinearLayout
        android:id="@+id/edit_group"
        android:layout_below="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_login_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:drawablePadding="15dp"
            android:hint="User name"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            android:selectAllOnFocus="true"
            android:padding="13dp"
            android:textSize="18sp"
            android:fontFamily="@font/reddit_sans_medium"
            android:background="@drawable/custom_edit_text"/>

        <EditText
            android:id="@+id/edit_login_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Password"
            android:importantForAutofill="no"
            android:selectAllOnFocus="true"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="13dp"
            android:textSize="18sp"
            android:fontFamily="@font/reddit_sans_medium"
            android:background="@drawable/custom_edit_text"/>

        <TextView
            android:id="@+id/text_login_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reddit_sans_regular"
            android:textColor="#f00"
            android:paddingLeft="13dp"
            android:gravity="left"
            android:textSize="10sp"
            android:text="" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_log"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_register"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        android:enabled="true"
        android:text="Login"
        android:textSize="18sp"
        android:fontFamily="@font/reddit_sans_regular"
        android:background="@drawable/custom_btn1"
        android:textColor="@color/card_background" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="30dp"
        android:enabled="true"
        android:text="Create account"
        android:textSize="18sp"
        android:fontFamily="@font/reddit_sans_regular"
        android:background="@drawable/custom_btn2"
        android:textColor="@color/headline"/>

</RelativeLayout>