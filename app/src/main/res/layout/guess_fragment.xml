<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Quiz.Guess.GuessFragment">

    <LinearLayout
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:padding="13dp"
        android:background="@drawable/custom_shape3"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/png_back_btn4"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/reddit_sans_black"
        android:textColor="@color/stroke"
        android:textSize="20sp"
        android:text="Guess the word"/>

    <LinearLayout
        android:id="@+id/quiz_container"
        android:layout_below="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:paddingHorizontal="8dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:background="@drawable/custom_shape3">
        <TextView
            android:id="@+id/txt_quiz_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reddit_sans_black"
            android:textColor="@color/stroke"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/quiz_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:gravity="start"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_optA"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@drawable/custom_shape4">
            <TextView
                android:id="@+id/txt_optA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reddit_sans_black"
                android:textColor="@color/button_text"
                android:textSize="15sp"
                android:text="A"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_optC"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/custom_shape4">
            <TextView
                android:id="@+id/txt_optC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reddit_sans_black"
                android:textColor="@color/button_text"
                android:textSize="15sp"
                android:text="C"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/quiz_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:gravity="end"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_optB"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@drawable/custom_shape4">
            <TextView
                android:id="@+id/txt_optB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reddit_sans_black"
                android:textColor="@color/button_text"
                android:textSize="15sp"
                android:text="B"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_optD"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/custom_shape4">
            <TextView
                android:id="@+id/txt_optD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/reddit_sans_black"
                android:textColor="@color/button_text"
                android:textSize="15sp"
                android:text="D"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_next"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@drawable/custom_shape5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/reddit_sans_extrabold"
            android:textColor="@color/card_background"
            android:textSize="20sp"
            android:text="Next"/>
    </LinearLayout>
</RelativeLayout>